@model Talent_Hunt.Models.Users

@{
    ViewBag.Title = "Add Committee Member";
}

<!-- Include Bootstrap and Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

<div class="container mt-4">
    <h2 class="text-center text-primary">Add Committee Member</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="shadow p-4 bg-light rounded">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="fw-bold">Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="fw-bold">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="fw-bold">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label class="fw-bold">Role</label>
                @Html.TextBoxFor(m => m.Role, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Add Member</button>
        }
    </div>
</div>

<!-- Include jQuery and Validation Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
<script>
    $(document).ready(function () {
        $("form").validate();
    });
</script>
